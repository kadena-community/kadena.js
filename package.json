{
  "name": "kadena.js",
  "version": "0.0.1",
  "description": "A practical util library for JavaScript programmers who are building on the Kadena blockchain",
  "main": "index.ts",
  "scripts": {
    "test": "jest ${npm_config_single} --testPathIgnorePatterns /integration-test/*",
    "test:integration:devnet": "jest ${npm_config_single} --testPathPattern /integration-test/devnet*",
    "test:integration:pactserver": "concurrently \"npm:start:pact\" \"jest ${npm_config_single} --testPathPattern \/integration-test\/pact-server*\" --kill-others",
    "build": "webpack --mode=development",
    "build:prod": "webpack --mode=production",
    "lint": "npx eslint . --ext .js,.ts",
    "postinstall": "husky install",
    "start:pact": "rm -Rf ./log && mkdir log && pact --serve integration-test/pact-server.conf"
  },
  "homepage": "tbd",
  "repository": {
    "type": "git",
    "url": "git://github.com/kadena-io/kadena.js.git"
  },
  "keywords": [
    "Kadena",
    "Crypto",
    "blackchain",
    "Pact-lang",
    "ChainWeb",
    "utils",
    "utilities"
  ],
  "author": "Randynamic",
  "contributors": [
    {
      "name": "buckie",
      "web": "https://github.com/buckie"
    },
    {
      "name": "ggobugi27",
      "web": "https://github.com/ggobugi27"
    },
    {
      "name": "Randynamic",
      "web": "https://github.com/Randynamic"
    }
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^27.5.1",
    "@types/node-fetch": "^2.6.1",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "concurrently": "^7.2.2",
    "eslint": "^8.15.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.2.2",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "prettier": "^2.6.2",
    "ts-jest": "^28.0.2",
    "ts-loader": "^9.3.0",
    "typescript": "^4.6.4",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "blakejs": "^1.2.1",
    "node-fetch": "^2.6.6",
    "tweetnacl": "^1.0.3"
  }
}
