{
  "extends": "./node_modules/@kadena-dev/shared-config/tsconfig-base.json",
  "compilerOptions": {
    "strictNullChecks": true,
    "rootDir": ".",
    "baseUrl": ".",
    "types": ["node"],
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "paths": {
      "@fixtures/*": ["./src/support/fixtures/*"],
      "@constants/*": ["./src/support/constants/*"],
      "@helpers/*": ["src/support/helpers/*"],
      "@page-objects/*": ["./src/support/page-objects/*"],
      "@devnet/*": ["./src/support/smart-contracts/*"],
      "@test-types/*": ["./src/support/types/*"]
    }
  },
  "include": ["**/*.ts", "/**/*.tsx"]
}
