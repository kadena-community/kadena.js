{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "esModuleInterop": true,
    "noEmitOnError": false,
    "allowUnreachableCode": false,
    "module": "commonjs",
    "target": "es2019",
    "lib": ["ES2020", "DOM"],
    "skipLibCheck": true
  }
}
