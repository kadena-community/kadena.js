{
  "name": "@kadena/react-components",
  "version": "0.0.1",
  "description": "A react component library built on Kadena's Design System",
  "license": "ISC",
  "author": "",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "types/index.d.ts",
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "build": "tsc -p ./tsconfig.esm.json & tsc -p ./tsconfig.cjs.json",
    "build:storybook": "storybook build",
    "build:test": "tsc & tsc -p ./tsconfig.esm.json",
    "lint": "eslint ./src --ext .js,.ts,.tsx --fix",
    "storybook": "storybook dev -p 6006",
    "test": "rushx build:test && heft test"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write -u --config ../../../.prettierrc --ignore-path ../../../.prettierignore"
    ],
    "{README.md,src/**/*.md}": [
      "prettier --write -u --config ../../../.prettierrc --ignore-path ../../../.prettierignore"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "dependencies": {
    "@radix-ui/react-switch": "^1.0.2",
    "@stitches/react": "1.3.1-1",
    "classnames": "^2.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.21.3",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.21.0",
    "@kadena-dev/eslint-config": "workspace:*",
    "@kadena-dev/eslint-plugin": "workspace:*",
    "@kadena-dev/heft-rig": "workspace:*",
    "@rushstack/eslint-config": "~3.3.0",
    "@rushstack/heft": "~0.50.6",
    "@rushstack/heft-jest-plugin": "~0.5.12",
    "@storybook/addon-actions": "^7.0.20",
    "@storybook/addon-essentials": "^7.0.20",
    "@storybook/addon-interactions": "^7.0.20",
    "@storybook/addon-links": "^7.0.20",
    "@storybook/addon-mdx-gfm": "^7.0.20",
    "@storybook/csf": "~0.1.1",
    "@storybook/docs-mdx": "~0.1.0",
    "@storybook/react": "^7.0.20",
    "@storybook/react-webpack5": "^7.0.20",
    "@storybook/testing-library": "^0.1.0",
    "@types/heft-jest": "~1.0.3",
    "@types/node": "^16.0.0",
    "@types/react": "^18.0.30",
    "eslint": "^8.15.0",
    "storybook": "^7.0.20",
    "storybook-dark-mode": "^3.0.0",
    "typescript": "5.0.4"
  }
}
