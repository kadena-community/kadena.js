{
  "extends": "./node_modules/@kadena-dev/shared-config/tsconfig-base.json",
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "types": ["node", "vitest-dom/extend-expect"],
    "skipLibCheck": true,
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "types",
    "outDir": "dist/esm",
    "allowJs": true,
    "moduleResolution": "Bundler",
    "removeComments": true,
    "plugins": [{ "name": "@vanilla-extract/css" }],
    "noEmitOnError": false
  },
  "include": ["src", "scripts", "src/**/*.stories.tsx"],
  "exclude": ["node_modules", "dist"]
}
