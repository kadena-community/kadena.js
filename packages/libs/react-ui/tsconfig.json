{
  "extends": "@kadena-dev/shared-config/tsconfig-base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": ".",
    "types": ["node", "vitest-dom/extend-expect"],
    "skipLibCheck": true,
    "module": "ESNext",
    "declarationDir": "types",
    "outDir": "dist/esm",
    "allowJs": true,
    "moduleResolution": "Bundler",
    "removeComments": true
  },
  "include": ["./src", "*.config.ts"],
  "exclude": ["node_modules"]
}
