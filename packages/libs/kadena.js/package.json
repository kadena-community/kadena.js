    }
  ],
  "main": "lib/index.js",
  "scripts": {
    "_phase:build": "heft build --clean",
    "_phase:test": "heft test --no-build",
    "build": "heft build --clean",
    "build:prod": "webpack --mode=production",
    "lint": "npx eslint ./src --ext .js,.ts --fix",
    "serve-coverage": "python -m SimpleHTTPServer",
    "test": "heft test"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write -u"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "dependencies": {
    "@kadena/cryptography-utils": "workspace:*",
    "@kadena/pactjs": "workspace:*",
    "@kadena/types": "workspace:*",
    "bignumber.js": "^9.0.2",
    "blakejs": "^1.2.1",
    "node-fetch": "~2.6.2",
    "tweetnacl": "^1.0.3",
    "webpack": "~5.73.0"
  },
  "devDependencies": {
    "@kadena-dev/eslint-config": "workspace:*",
    "@kadena-dev/heft-rig": "workspace:*",
    "@rushstack/eslint-config": "~2.6.2",
    "@rushstack/heft": "~0.46.1",
    "@types/heft-jest": "~1.0.3",
    "@types/node-fetch": "~2.6.2",
    "eslint": "^8.15.0",
    "serve": "^13.0.2",
    "ts-loader": "^9.3.0",
    "webpack-cli": "^4.9.2"
  },
  "engines": {
