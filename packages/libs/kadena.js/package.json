{
  "name": "kadena.js",
  "version": "0.0.1",
  "description": "A practical util library for JavaScript programmers who are building on the Kadena blockchain",
  "keywords": [
    "Kadena",
    "Crypto",
    "blackchain",
    "Pact-lang",
    "ChainWeb",
    "utils",
    "utilities"
  ],
  "homepage": "tbd",
  "repository": {
    "type": "git",
    "url": "git://github.com/kadena-io/kadena.js.git"
  },
  "license": "MIT",
  "author": "Randynamic",
  "contributors": [
