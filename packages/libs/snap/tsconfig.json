{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["DOM", "ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "useUnknownInCatchVariables": false,
    "sourceMap": true,
    "strict": true,
    "target": "ES2020",
    "skipLibCheck": true
  },
  "include": ["./src"],
  "exclude": ["**/__snapshots__/**", "**/test/**", "**/*.test.ts"]
}
