{
  "name": "@kadena-dev/eslint-plugin",
  "version": "0.0.3",
  "main": "src/index.js",
  "scripts": {
    "build": "heft build --clean",
    "lint-staged": "lint-staged",
    "test": "heft test --no-build"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write -u --config ../../../.prettierrc --ignore-path ../../../.prettierignore"
    ],
    "{README.md,src/**/*.md}": [
      "prettier --write -u --config ../../../.prettierrc --ignore-path ../../../.prettierignore"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "dependencies": {
    "@typescript-eslint/experimental-utils": "~5.53.0",
    "eslint-module-utils": "^2.7.1",
    "is-core-module": "^2.8.0"
  },
  "devDependencies": {
    "@rushstack/eslint-plugin": "~0.11.0",
    "@rushstack/heft": "~0.50.6",
    "eslint": "^8.15.0",
    "typescript": "5.0.4"
  }
}
