{
  "$schema": "http://json.schemastore.org/tsconfig",

  "compilerOptions": {
    "outDir": "../../../integration-tests/lib",
    "rootDir": "../../../integration-tests",

    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "esModuleInterop": true,
    "noEmitOnError": false,
    "allowUnreachableCode": false,
    "strictNullChecks": true,

    "types": [],
    "module": "commonjs",
    "target": "es2019",

    "skipLibCheck": true
  },
  "include": ["../../../integration-tests/**/*.ts", "../../../integration-tests/**/*.tsx",],
  "exclude": ["../../../src/**/*.ts", "../../../src/**/*.tsx",]
}
