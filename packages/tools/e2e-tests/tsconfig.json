{
  "extends": "./node_modules/@kadena-dev/shared-config/tsconfig-base.json",
  "compilerOptions": {
    "strictNullChecks": true,
    "rootDir": ".",
    "baseUrl": ".",
    "types": ["node"],
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "paths": {
      "@fixtures/graph/*": ["./src/support/fixtures/graph/*"],
      "@fixtures/tools/*": ["./src/support/fixtures/tools/*"],
      "@fixtures/shared/*": ["./src/support/fixtures/shared/*"],
      "@constants/*": ["./src/support/constants/*"],
      "@helpers/graph/*": ["src/support/helpers/graph/*"],
      "@helpers/tools/*": ["src/support/helpers/tools/*"],
      "@helpers/client-utils/*": ["src/support/helpers/client-utils/*"]
    }
  },
  "include": ["**/*.ts", "/**/*.tsx"]
}
