{
  "extends": "./node_modules/@kadena-dev/shared-config/tsconfig-base.json",
  "compilerOptions": {
    "strictNullChecks": true,
    "rootDir": ".",
    "baseUrl": ".",
    "types": ["node"],
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "paths": {
      "@fixtures/graph/*": ["./src/support/fixtures/graph/*"],
      "@fixtures/tools/*": ["./src/support/fixtures/tools/*"],
      "@fixtures/shared/*": ["./src/support/fixtures/shared/*"],
      "@constants/*": ["./src/support/constants/*"],
      "@helpers/graph/*": ["src/support/helpers/graph/*"],
      "@helpers/tools/*": ["src/support/helpers/tools/*"],
      "@helpers/docs/*": ["src/support/helpers/docs/*"],
      "@helpers/client-utils/*": ["src/support/helpers/client-utils/*"],
      "@page-objects/react-ui/*": ["./src/support/page-objects/react-ui/*"],
      "@page-objects/tools-app/*": ["./src/support/page-objects/tools-app/*"],
      "@devnet/faucet/*": ["./src/support/smart-contracts/faucet/*"],
      "@devnet/guards/*": ["./src/support/smart-contracts/guards/*"],
      "@devnet/kadenaXchainGas/*": [
        "./src/support/smart-contracts/kadena-xchain-gas/*"
      ],
      "@test-types/*": ["./src/support/types/*"]
    }
  },
  "include": ["**/*.ts", "/**/*.tsx"]
}
