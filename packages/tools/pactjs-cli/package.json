{
  "name": "@kadena/pactjs-cli",
  "version": "0.1.1",
  "description": "CLI tool accompanying @kadena/pactjs-core and @kadena/pactjs-client to generate TypeScript definitions and Pact client",
  "repository": {
    "type": "git",
    "url": "https://github.com/kadena-community/kadena.js.git",
    "directory": "packages/tools/pactjs-cli"
  },
  "license": "MIT",
  "bin": {
    "pactjs": "lib/index.js"
  },
  "scripts": {
    "build": "heft build --clean",
    "lint-staged": "lint-staged",
    "test": "heft test --no-build --config ./jest.config.json"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write -u --config ../../../.prettierrc --ignore-path ../../../.prettierignore"
    ],
    "{README.md,src/**/*.md}": [
      "prettier --write -u --config ../../../.prettierrc --ignore-path ../../../.prettierignore"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "dependencies": {
    "@kadena/pactjs-generator": "workspace:*",
    "commander": "^9.3.0",
    "cross-fetch": "~3.1.5",
    "debug": "~4.3.4",
    "mkdirp": "~1.0.4",
    "ramda": "~0.28.0",
    "rimraf": "~3.0.2",
    "yaml": "~2.1.1",
    "zod": "~3.18.0"
  },
  "devDependencies": {
    "@kadena-dev/eslint-config": "workspace:*",
    "@kadena-dev/eslint-plugin": "workspace:*",
    "@kadena-dev/heft-rig": "workspace:*",
    "@rushstack/eslint-config": "~3.3.0",
    "@rushstack/heft": "~0.50.6",
    "@types/debug": "~4.1.7",
    "@types/heft-jest": "~1.0.3",
    "@types/mkdirp": "~1.0.2",
    "@types/node": "^16.0.0",
    "@types/ramda": "~0.28.15",
    "@types/rimraf": "~3.0.2",
    "eslint": "^8.15.0"
  }
}
