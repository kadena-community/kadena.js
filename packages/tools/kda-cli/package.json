{
  "name": "@kadena/kda-cli",
  "version": "0.0.1",
  "private": true,
  "description": "CLI tool to assist development on the kadena blockchain",
  "keywords": [
    "kadena",
    "kda",
    "cli",
    "development",
    "dev",
    "tools"
  ],
  "license": "MIT",
  "type": "module",
  "types": "dist/kda-cli.d.ts",
  "bin": {
    "kda": "bin/kda.js"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "tsc && api-extractor run --verbose",
    "dev": "heft build -w",
    "format": "pnpm run --sequential /^format:.*/",
    "format:lint": "pnpm run lint:src --fix",
    "format:md": "remark README.md -o --use @kadena-dev/markdown",
    "format:src": "prettier . --cache --write",
    "kda": "node lib/index.js",
    "lint": "pnpm run /^lint:.*/",
    "lint:fmt": "prettier . --cache --check",
    "lint:pkg": "lint-package",
    "lint:src": "eslint src --ext .js,.ts,.tsx",
    "test": "jest --silent"
  },
  "dependencies": {
    "@inkjs/ui": "^1.0.0",
    "@kadena/cryptography-utils": "workspace:*",
    "ava": "5.3.1",
    "cross-spawn": "~7.0.3",
    "dotenv": "~16.0.3",
    "ink": "^4.1.0",
    "meow": "^11.0.0",
    "react": "^18.2.0",
    "yaml": "~2.1.1"
  },
  "devDependencies": {
    "@kadena-dev/eslint-config": "workspace:*",
    "@kadena-dev/heft-rig": "workspace:*",
    "@kadena-dev/lint-package": "workspace:*",
    "@kadena-dev/markdown": "workspace:*",
    "@microsoft/api-extractor": "^7.37.0",
    "@rushstack/eslint-config": "~3.3.0",
    "@types/cross-spawn": "~6.0.2",
    "@types/jest": "^29.5.3",
    "@types/node": "^18.17.14",
    "@types/react": "^18.2.15",
    "chalk": "^5.2.0",
    "eslint": "^8.45.0",
    "ink-testing-library": "^3.0.0",
    "jest": "^29.7.0",
    "prettier": "~3.0.0",
    "prettier-plugin-packagejson": "^2.4.5",
    "typescript": "5.2.2"
  },
  "engines": {
    "node": ">=16"
  }
}
