{
  "name": "@kadena/kda-cli",
  "version": "0.0.1",
  "private": true,
  "description": "CLI tool to assist development on the kadena blockchain",
  "keywords": [
    "kadena",
    "kda",
    "cli",
    "development",
    "dev",
    "tools"
  ],
  "license": "MIT",
  "type": "module",
  "bin": {
    "kda": "lib/index.js"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "heft build",
    "dev": "heft build -w",
    "format": "pnpm run /^format:.*/",
    "format:md": "remark README.md -o --use @kadena-dev/markdown",
    "format:src": "prettier config src --write",
    "kda": "node lib/index.js",
    "lint": "pnpm run /^lint:.*/",
    "lint:pkg": "lint-package",
    "lint:src": "eslint package.json src --ext .js,.ts,.tsx --fix",
    "test": "heft test"
  },
  "dependencies": {
    "@inkjs/ui": "^1.0.0",
    "@kadena/cryptography-utils": "workspace:*",
    "cross-spawn": "~7.0.3",
    "dotenv": "~16.0.3",
    "ink": "^4.1.0",
    "meow": "^11.0.0",
    "react": "^18.2.0",
    "yaml": "~2.1.1"
  },
  "devDependencies": {
    "@kadena-dev/eslint-config": "workspace:*",
    "@kadena-dev/heft-rig": "workspace:*",
    "@kadena-dev/lint-package": "workspace:*",
    "@kadena-dev/markdown": "workspace:*",
    "@rushstack/eslint-config": "~3.3.0",
    "@rushstack/heft": "~0.50.6",
    "@types/cross-spawn": "~6.0.2",
    "@types/heft-jest": "~1.0.3",
    "@types/node": "^16.0.0",
    "@types/react": "^18.2.15",
    "chalk": "^5.2.0",
    "eslint": "^8.45.0",
    "ink-testing-library": "^3.0.0",
    "prettier": "~3.0.0",
    "ts-node": "~10.8.2",
    "typescript": "5.1.6"
  },
  "engines": {
    "node": ">=16"
  }
}
