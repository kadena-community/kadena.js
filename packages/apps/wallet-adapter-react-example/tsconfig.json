{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "declaration": true
  },
  "include": ["src/**/*", "packages/**/*", "examples/**/*"],
  "exclude": ["node_modules", "dist"]
}
