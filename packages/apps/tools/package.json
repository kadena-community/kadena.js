{
  "name": "@kadena/tools",
  "version": "1.2.0",
  "private": true,
  "scripts": {
    "build": "pnpm run generate:contracts && next build",
    "build:e2e": "pnpm run generate:contracts && NODE_ENV=test next build",
    "dev": "next dev",
    "format": "pnpm run --sequential /^format:.*/",
    "format:lint": "pnpm run lint:src --fix",
    "format:md": "remark README.md -o --use @kadena-dev/markdown",
    "format:src": "prettier . --cache --write",
    "generate:coin:contract": "pactjs contract-generate --contract coin --api https://api.testnet.chainweb.com/chainweb/0.0/testnet04/chain/1/pact --chain 1 --network testnet",
    "generate:contracts": "pnpm run /^generate:.*:contract/",
    "generate:faucet:contract": "pactjs contract-generate --contract n_d8cbb935f9cd9d2399a5886bb08caed71f9bad49.coin-faucet --api https://api.testnet.chainweb.com/chainweb/0.0/testnet04/chain/1/pact --chain 1 --network testnet",
    "lint": "pnpm run /^lint:.*/",
    "lint:fmt": "prettier . --cache --check",
    "lint:pkg": "lint-package",
    "lint:src": "eslint src --ext .ts,.tsx",
    "start": "next start",
    "test": "vitest run",
    "test:watch": "vitest",
    "verify": "pnpm run generate:contracts && tsc --noEmit"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.2.0",
    "@kadena/chainweb-node-client": "workspace:*",
    "@kadena/client": "workspace:*",
    "@kadena/client-utils": "workspace:*",
    "@kadena/cryptography-utils": "workspace:*",
    "@kadena/fonts": "~0.0.1",
    "@kadena/pactjs": "workspace:*",
    "@kadena/pactjs-generator": "workspace:*",
    "@kadena/react-icons": "workspace:*",
    "@kadena/react-ui": "workspace:*",
    "@ledgerhq/hw-app-kda": "git+ssh://git@github.com:obsidiansystems/hw-app-kda",
    "@ledgerhq/hw-transport-webhid": "^6.28.3",
    "@ledgerhq/logs": "^6.12.0",
    "@tanstack/react-query": "^4.35.3",
    "@vanilla-extract/css": "1.14.2",
    "@walletconnect/modal": "~2.6.1",
    "@walletconnect/sign-client": "~2.8.1",
    "@walletconnect/utils": "~2.9.2",
    "ace-builds": "~1.30.0",
    "classnames": "^2.3.1",
    "js-cookie": "~3.0.5",
    "next": "14.2.2",
    "next-themes": "^0.2.1",
    "next-translate": "~2.0.6",
    "react": "^18.2.0",
    "react-ace": "~10.1.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.45.4",
    "react-use": "^17.4.0",
    "zod": "~3.23.0"
  },
  "devDependencies": {
    "@kadena-dev/eslint-config": "workspace:*",
    "@kadena-dev/lint-package": "workspace:*",
    "@kadena-dev/markdown": "workspace:*",
    "@kadena-dev/shared-config": "workspace:*",
    "@kadena/pactjs-cli": "workspace:*",
    "@kadena/types": "workspace:*",
    "@ledgerhq/hw-transport": "^6.30.3",
    "@rushstack/eslint-config": "~3.6.9",
    "@rushstack/heft": "~0.50.6",
    "@tanstack/eslint-plugin-query": "^4.34.1",
    "@testing-library/react": "~14.0.0",
    "@testing-library/user-event": "~14.5.1",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/debug": "~4.1.12",
    "@types/js-cookie": "~3.0.3",
    "@types/node": "^20.12.7",
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.2.25",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vanilla-extract/next-plugin": "2.1.2",
    "@vanilla-extract/vite-plugin": "4.0.7",
    "@vitest/coverage-v8": "^1.6.0",
    "@walletconnect/types": "~2.8.1",
    "@webpro/next-translate-plugin": "^2.6.3",
    "debug": "~4.3.4",
    "eslint": "^8.45.0",
    "eslint-config-next": "13.4.5",
    "happy-dom": "^12.9.1",
    "next-router-mock": "^0.9.10",
    "prettier": "~3.2.5",
    "typescript": "5.4.5",
    "vitest": "^1.6.0",
    "vitest-dom": "^0.1.1"
  },
  "volta": {
    "node": "16.15.0"
  }
