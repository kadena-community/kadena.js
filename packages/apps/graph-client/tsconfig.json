{
  "extends": "./node_modules/@kadena/heft-rig/profiles/default/tsconfig-base.json",
  "compilerOptions": {
    "types": ["node"],
    "target": "ES2020",
    "allowJs": false,
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": false, // fixes pnpm issue: https://github.com/microsoft/TypeScript/issues/42873
    "jsx": "preserve"
  },
  "exclude": ["node_modules"]
}
