{
  "name": "@kadena/graph-client",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "concurrently --kill-others \"npm:next:dev\" \"npm:start:graph\" \"sleep 2; rushx generate:graph -w\"",
    "generate:graph": "graphql-codegen --config codegen.yml",
    "lint": "next lint",
    "lint-staged": "lint-staged",
    "next:dev": "next dev",
    "start": "next start",
    "start:graph": "cd ../graph && rushx start",
    "test": "heft test"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write -u"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "dependencies": {
    "@apollo/client": "~3.7.2",
    "@graphql-yoga/apollo-link": "~1.0.1",
    "@radix-ui/colors": "~0.1.8",
    "@radix-ui/react-icons": "~1.1.1",
    "@stitches/react": "~1.2.8",
    "@types/node": "18.11.13",
    "@types/react": "18.0.26",
    "@types/react-dom": "18.0.9",
    "eslint": "8.29.0",
    "eslint-config-next": "13.0.6",
    "graphql": "~16.6.0",
    "graphql-sse": "~1.3.2",
    "next": "13.0.6",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "typescript": "4.9.4"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.16.1",
    "@graphql-codegen/client-preset": "1.2.3",
    "@graphql-codegen/introspection": "2.2.3",
    "@graphql-codegen/typescript": "~2.8.5",
    "@graphql-codegen/typescript-graphql-request": "~4.5.8",
    "@graphql-codegen/typescript-operations": "~2.5.10",
    "@graphql-codegen/typescript-react-apollo": "~3.3.7",
    "@kadena/eslint-config": "workspace:*",
    "@kadena/heft-rig": "workspace:*",
    "@kadena/pactjs-cli": "workspace:*",
    "@rushstack/eslint-config": "~2.6.2",
    "@rushstack/heft": "~0.46.1",
    "@types/heft-jest": "~1.0.3",
    "@types/node": "^16.0.0",
    "concurrently": "^7.2.2"
  }
}
