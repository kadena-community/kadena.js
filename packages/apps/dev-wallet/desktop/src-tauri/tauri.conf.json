{
  "build": {
    "beforeDevCommand": "pnpm --filter dev-wallet dev --port 1420",
    "beforeBuildCommand": "pnpm --filter dev-wallet build",
    "devPath": "http://localhost:1420",
    "distDir": "../node_modules/dev-wallet/dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "dev-wallet",
    "version": "0.0.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "io.kadena.dev-wallet",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "desktop",
        "width": 1000,
        "height": 800
      }
    ]
  }
}
