{
  "extends": "./node_modules/@kadena-dev/heft-rig/profiles/default/tsconfig-base.json",
  "compilerOptions": {
    "types": [
      "heft-jest",
      "node",
      "@types/gtag.js"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "target": "ES2020",
    "allowJs": false,
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "exclude": [
    "node_modules",
    "./cypress"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "environment.d.ts",
    ".next/types/**/*.ts"
  ] // see the last entry in array
}
