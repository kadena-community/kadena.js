{
  "extends": "./node_modules/@kadena-dev/heft-rig/profiles/default/tsconfig-base.json",
  "compilerOptions": {
    "types": [
      "heft-jest",
      "node",
      "@types/gtag.js"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "skipLibCheck": true,
    "allowJs": false,
    "noEmit": false,
    "incremental": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "exclude": [
    "node_modules",
    "./cypress"
  ],
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "environment.d.ts",
    ".next/types/**/*.ts"
  ] // see the last entry in array
}
