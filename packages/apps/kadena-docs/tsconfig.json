{
  "extends": "./node_modules/@kadena-dev/heft-rig/profiles/default/tsconfig-base.json",
  "compilerOptions": {
    "types": ["heft-jest", "node"],
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "strict": true,
    "incremental": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "exclude": ["node_modules"]
}
